Type: Package
Package: tmhelp
Title: Chat Interface for Tidymodels Help
Version: 0.1.0
Authors@R: c(
    person("Max", "Kuhn", , "max@posit.co", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0003-2402-136X")),
    person("Tomasz", "Kalinowski", , "tomasz@posit.co", role = "aut"),
    person("Posit Software, PBC", role = c("cph", "fnd"),
